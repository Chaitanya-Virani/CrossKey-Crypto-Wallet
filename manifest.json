{
    "manifest_version": 3,
    "name": "Crypto Wallet Extension",
    "version": "1.0.0",
    "description": "A simple Ethereum and Polygon wallet manager",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "storage"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }